{{#items}}
.icon-{{name}}
  padding-left: {{px.width}} + 4px
  position: relative
  line-height: {{px.height}}

  &:before
    content:''
    position: absolute
    background-image: url({{{escaped_image}}})
    background-position: {{px.offset_x}} {{px.offset_y}}
    width: {{px.width}}
    height: {{px.height}}
    left: -0px
    top: 0px

.icon-left-{{name}}
  position: absolute
  background-image: url({{{escaped_image}}})
  background-position: {{px.offset_x}} {{px.offset_y}}
  width: {{px.width}}
  height: {{px.height}}
  float: left

.icon-right-{{name}}
  position: absolute
  background-image: url({{{escaped_image}}})
  background-position: {{px.offset_x}} {{px.offset_y}}
  width: {{px.width}}
  height: {{px.height}}
  float: right

{{/items}}